interface=wlan0
dhcp-range=192.168.45.11,192.168.45.50,255.255.255.0,12h
log-facility=/var/log/dnsmasq.log
log-async
log-dhcp


#Add to rc.local
/usr/local/bin/supervisord -c /etc/supervisord.conf

#Add to dhcpcd.conf
interface wlan0
